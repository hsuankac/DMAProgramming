#include "stm32f446xx.h"

void clear_exti_pending_bit(void);


void clear_exti_pending_bit(void)
{
	EXTI_TypeDef *EXTI = EXTI;

	// Clear the pending bit
	if(EXTI->PR & (1 << 13))
	{
		EXTI->PR |= (1 << 13);
	}

}

// IRQ handler for the button interrupt
void EXTI15_10_IRQHandler(void)
{
	clear_exti_pending_bit();
}
